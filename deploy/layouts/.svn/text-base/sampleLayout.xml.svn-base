<layout id="root" percentWidth="1" percentHeight="1" alpha=".5"
    top="20" bottom="20" left="20" right="20"
	minWidth="200" minHeight="200"
>




  <layout id="menu" percentWidth=".5" percentHeight="1"
    minHeight="10" maxHeight="180"
    alpha="0" color="0xCC00CC">

  </layout>



  <layout id="contentZone"
    percentWidth="1" percentHeight="1"

    y="20"
    left="5" right="40"
    x="10"
    top="80" bottom="50"

    alpha="0" color="0x00CC00"
  >
    <layout id="contentMain"
      top="10" bottom="10" left="10" right="10"

      alpha="0" color="0x00CCCC"

      maintainAspectRatio="1"
    >
              <layout id="contentInner"
				percentWidth=".5"

      alpha=".75" color="0x00CC00" ></layout>
    </layout>



  </layout>

  <layout id="footer" percentWidth="1" percentHeight="1" percentBottom="0"
    minHeight="0" maxHeight="150"

    left="20" right="20"

    alpha="0" color="0xCC0000"
    >

      <layout id="footerInnerE"
        top="10" bottom="10" left="10" right="10"

        alpha=".75" color="0x00CC00" >

      <layout id="footerInnerB"
        top="10" bottom="10" left="10" right="10" alpha=".75" color="0x00CC00" >

<layout id="footerInnerC"
        top="10" bottom="10" left="10" right="10"></layout>
</layout>


        </layout>

  </layout>




  <layout id="menuFollowerZ" percentWidth=".25" percentHeight="1"
    minHeight="10" maxHeight="180"
    alpha="0" color="0xCC00CC">
	    <align>
	      <local percentLeft="0" />
	      <remote remoteId="menu" percentLeft="1" />
	    </align>
	    <align>
	      <local percentTop="0" />
	      <remote remoteId="menu" percentTop=".5" />
	    </align>
  </layout>

  <layout id="menuFollowerB" percentWidth=".25" percentHeight="1"
    minHeight="10" maxHeight="180"
    alpha="0" color="0xCC00CC">
	    <align>
	      <local percentLeft="0" />
	      <remote remoteId="menuFollowerZ" percentLeft="1" />
	    </align>
	    <align>
	      <local percentTop="0" />
	      <remote remoteId="menuFollowerZ" percentTop=".5" />
	    </align>
  </layout>

<!-- -->

<layout id="footerInnerCFollower"
        width="150" height="125"
        >
	    <align>
	      <local percentTop="1" />
	      <remote remoteId="menu" percentTop="1" />
	    </align>
		<align>
	      <local percentLeft=".5" />
	      <remote remoteId="menu" percentLeft=".5" />
	    </align>
</layout>

</layout>